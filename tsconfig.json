{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "rootDirs": [
      "./src",
      "./scripts",
      "./test",
      "./deployment"
    ]
  },
  "include": [
    "./src/**/*",
    "./scripts",
    "./test",
    "./test/**/*",
    "./prompt",
    "./prompt/**/*"
, "utils/colorConsole.ts"  ],
  "files": [
    "./hardhat.config.ts"
  ]
}